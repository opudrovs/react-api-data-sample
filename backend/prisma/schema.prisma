datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  seed = "ts-node prisma/seed.ts"
}

enum TaskStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
}

enum TaskPriority {
  LOW
  MEDIUM
  HIGH
}

model Task {
   id          Int      @id @default(autoincrement())
   title       String
   description String?
   status      TaskStatus
   priority    TaskPriority
   dueDate     DateTime
   createdAt   DateTime @default(now())
   deletedAt   DateTime?
   readOnly    Boolean  @default(false)
}
